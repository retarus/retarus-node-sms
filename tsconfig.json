{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "exclude": [
        "**/*.test.ts",
        "**/*.stub.ts",
        "node_modules",
        "dist"
    ],
}